<!DOCTYPE html>
<html>
  <head>
    <title>Trackstar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">
        Trakstar
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">

          <li class="nav-item">
            <%= link_to "Kudos", kudos_path, class:"nav-link" %>
          </li>

        </ul>

        <ul class="nav navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <span class="nav-link"> Logged in as: <strong><%= current_user.email %></strong> </span>
            </li>

            <li class="nav-item">
              <span class="nav-link"> Organization: <strong><%= current_user.organization.name %></strong> </span>
            </li>

          <% else %>

            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class:"nav-link"  %>
            </li>

          <% end %>
        </ul>
      </div>
    </nav>

    <section class="container">
      <% flash.each do |message| %>
        <div id="flash-message" class="alert alert-primary alert-dismissible fade show" role="alert">
          <%= sanitize(message[1]) %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

      <%= yield %>
    </section>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
